<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" spacing="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calibration.Controller">
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </padding>
  <children>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#saveData" text="Save">
              <accelerator>
                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
              </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#loadData" text="Load">
              <accelerator>
                <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
              </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#chooseImage" text="Open">
              <accelerator>
                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
              </accelerator>
            </MenuItem>
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <ScrollPane prefViewportHeight="150.0" prefViewportWidth="200.0" VBox.vgrow="ALWAYS">
      <content>
        <AnchorPane fx:id="pointPlacement">
          <children>
            <ImageView fx:id="fieldImage" onMouseClicked="#handleMouseClicked" pickOnBounds="true" preserveRatio="true" />
          </children>
        </AnchorPane>
      </content>
    </ScrollPane>
    <HBox fx:id="infoPane" spacing="5.0">
      <VBox.margin>
        <Insets />
      </VBox.margin>
      <children>
        <TextField fx:id="distanceViewer" editable="false" text="Select Image" />
        <Region HBox.hgrow="ALWAYS" />
        <Button mnemonicParsing="false" onAction="#chooseImage" text="Select image" />
      </children>
    </HBox>
  </children>
</VBox>
