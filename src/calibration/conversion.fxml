<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8"
  fx:controller="calibration.DistanceConverter">
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="This the pixel distance of the selected points"/>
  <TextField editable="false" promptText="Pixel distance" fx:id="pixelDistance"/>
  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter actual distance of points"/>
  <TextField onAction="#retrieveInfo" promptText="Actual distance i.e: 4.3 cm" fx:id="dataInput"/>
</VBox>
